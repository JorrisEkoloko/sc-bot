# Crypto Intelligence System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# TELEGRAM API CREDENTIALS
# ============================================================================
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=+1234567890
TELEGRAM_SESSION_NAME=crypto_intelligence

# ============================================================================
# HISTORICAL SCRAPING (Multi-Channel Enhancement)
# ============================================================================
# Scrape ALL available messages from each channel (complete history)
HISTORICAL_SCRAPER_ENABLED=true
HISTORICAL_SCRAPER_MESSAGE_LIMIT=0              # 0 = unlimited, fetch ALL messages
HISTORICAL_SCRAPER_SCRAPED_CHANNELS_FILE=data/scraped_channels.json

# ⚠️  First run with ALL messages may take 2-8 hours depending on channel age
# Subsequent runs are fast (only new messages fetched)

# ============================================================================
# PRIORITY QUEUE (Multi-Channel Enhancement)
# ============================================================================
# Maximum messages in queue (increased for ALL messages scraping)
QUEUE_MAX_SIZE=5000

# Global rate limit (messages per second)
# 2.0 msg/s = 120 msg/min = 7,200 msg/hour
QUEUE_MESSAGES_PER_SECOND=2.0

# ============================================================================
# PARALLEL SCRAPING (Multi-Channel Enhancement)
# ============================================================================
# Max channels to scrape simultaneously (increased for faster ALL messages scraping)
# 10 concurrent = ~2x faster than 5 concurrent
PARALLEL_SCRAPER_MAX_CONCURRENT=10

# ============================================================================
# API KEYS
# ============================================================================
# Price APIs
COINGECKO_API_KEY=your_coingecko_key
BIRDEYE_API_KEY=your_birdeye_key
MORALIS_API_KEY=your_moralis_key

# Historical Data APIs (optional)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key
TWELVEDATA_API_KEY=your_twelvedata_key

# Validation APIs (optional)
ETHERSCAN_API_KEY=your_etherscan_key

# ============================================================================
# GOOGLE SHEETS (optional)
# ============================================================================
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SERVICE_ACCOUNT_FILE=credentials/service_account.json

# ============================================================================
# PERFORMANCE TRACKING
# ============================================================================
PERFORMANCE_TRACKING_DAYS=7
PERFORMANCE_DATA_DIR=data/performance

# ============================================================================
# SENTIMENT ANALYSIS CONFIGURATION
# ============================================================================
# NLP Enhancement Settings
SENTIMENT_NLP_ENABLED=true                      # Enable NLP-enhanced sentiment analysis
SENTIMENT_NLP_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest  # Transformer model
SENTIMENT_NLP_DEVICE=cpu                        # 'cpu' or 'gpu'
SENTIMENT_NLP_CONFIDENCE_THRESHOLD=0.7          # Threshold for NLP invocation (0.0-1.0)

# Pattern Matching Settings
SENTIMENT_PATTERN_CONFIDENCE_THRESHOLD=0.7      # Pattern confidence threshold (0.0-1.0)
SENTIMENT_USE_CRYPTO_VOCABULARY=true            # Enable crypto-specific vocabulary

# Model Management
SENTIMENT_MODEL_CACHE_DIR=models/sentiment      # Directory for cached NLP models
SENTIMENT_FALLBACK_TO_PATTERN=true              # Fall back to pattern-only if NLP fails

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================
# Message processing settings
CONFIDENCE_THRESHOLD=0.7                        # Minimum confidence for signal processing
HDRB_MAX_IC=1000.0                             # Maximum HDRB IC value for normalization
MIN_MESSAGE_LENGTH=10                           # Minimum message length to process
MAX_PROCESSING_TIME_MS=100.0                    # Maximum processing time per message (ms)

# Timeout configurations for async operations (seconds)
HISTORICAL_PRICE_TIMEOUT=30.0                   # Timeout for historical price fetches
OHLC_FETCH_TIMEOUT=20.0                        # Timeout for OHLC data fetches

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO                                  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# CONFIGURATION SUMMARY
# ============================================================================
# With these settings:
# - Scrapes ALL messages from each channel (complete history)
# - 10 channels scraped simultaneously (fast)
# - Queue holds up to 5,000 messages (high volume)
# - Processes 2 messages/second (API safe)
# - First run: 2-8 hours (one-time)
# - Subsequent runs: Fast (only new messages)
